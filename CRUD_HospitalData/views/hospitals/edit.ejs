<% layout('layouts/boilerplate') %>

<div class="border mt-5 p-3 col-6 mx-auto shadow rounded">
    <form action="/hospitals/<%= foundHospital._id %>?_method=PATCH" method="post">
        <!-- Hospital Name (non-editable) -->
        <div class="mb-3">
            <label for="hospitalName" class="form-label">Hospital Name:</label>
            <input type="text" name="hospitalName" class="form-control" id="hospitalName" value="<%= foundHospital.hospitalName %>" readonly>
        </div>

        <!-- Location (editable) -->
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input type="text" name="location" class="form-control" id="location" value="<%= foundHospital.location %>">
        </div>

        <!-- Number of Doctors (editable) -->
        <div class="mb-3">
            <label for="numberOfDoctors" class="form-label">Number of Doctors:</label>
            <input type="number" name="numberOfDoctors" class="form-control" id="numberOfDoctors" value="<%= foundHospital.numberOfDoctors %>">
        </div>

        <!-- Number of Beds (editable) -->
        <div class="mb-3">
            <label for="numberOfBed" class="form-label">Number of Beds:</label>
            <input type="number" name="numberOfBed" class="form-control" id="numberOfBed" value="<%= foundHospital.numberOfBed %>">
        </div>

        <button type="submit" class="btn btn-danger">Submit</button>
    </form>
</div>
