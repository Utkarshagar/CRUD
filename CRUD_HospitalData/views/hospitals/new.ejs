<% layout('layouts/boilerplate') %>

<div class="border mt-5 p-3 col-6 mx-auto shadow rounded">
    <form action="/hospitals" method="post">
        <!-- Hospital Name -->
        <div class="mb-3">
            <label for="hospitalName" class="form-label">Hospital Name:</label>
            <input type="text" name="hospitalName" class="form-control" id="hospitalName" aria-describedby="hospitalName">
        </div>

        <!-- Location -->
        <div class="mb-3">
            <label for="location" class="form-label">Location:</label>
            <input type="text" name="location" class="form-control" id="location" aria-describedby="location">
        </div>
        
        <!-- Number of Doctors -->
        <div class="mb-3">
            <label for="numberOfDoctors" class="form-label">Number of Doctors:</label>
            <input type="number" name="numberOfDoctors" class="form-control" id="numberOfDoctors">
        </div>

        <!-- Number of Beds -->
        <div class="mb-3">
            <label for="numberOfBed" class="form-label">Number of Beds:</label>
            <input type="number" name="numberOfBed" class="form-control" id="numberOfBed">
        </div>

        <button type="submit" class="btn btn-danger">Submit</button>
    </form>
</div>
